@model Webform_DK_QL.Models.User

@{
    ViewData["Title"] = "Đăng ký người dùng";
}

<div class="container mt-4">
    <h1 class="text-center mb-4" style="color: #2c3e50; font-size: clamp(1.5rem, 5vw, 2.5rem);">Đăng ký người dùng</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                <div class="row g-3">
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="FullName" class="form-control" placeholder="Họ tên" required>
                            <label asp-for="FullName" class="form-label">Họ tên</label>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="Email" required>
                            <label asp-for="Email" class="form-label">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="DateOfBirth" type="date" class="form-control" placeholder="Ngày sinh" required>
                            <label asp-for="DateOfBirth" class="form-label">Ngày sinh</label>
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Số điện thoại" required>
                            <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill px-4 py-2" style="min-width: 200px;">Đăng ký</button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill px-4 py-2 ms-3" style="min-width: 200px;">Quay lại</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}