@model Webform_DK_QL.Models.User

@{
    ViewData["Title"] = "Xóa người dùng";
}

<div class="container mt-4">
    <h1 class="text-center mb-4" style="font-size: clamp(1.5rem, 5vw, 2.5rem);">Xóa người dùng</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="text-center mb-4" style="color: #dc3545;">Bạn có chắc chắn muốn xóa người dùng sau?</h3>
            <div class="text-center mb-4">
                <strong>Họ tên:</strong> @Html.DisplayFor(model => model.FullName)<br />
                <strong>Email:</strong> @Html.DisplayFor(model => model.Email)<br />
                <strong>Ngày sinh:</strong> @Model.DateOfBirth.ToString("dd/MM/yyyy")<br />
                <strong>Số điện thoại:</strong> @Html.DisplayFor(model => model.PhoneNumber)
            </div>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="text-center">
                    <div class="d-grid gap-3 d-md-flex justify-content-center">
                        <button type="submit" class="btn btn-danger btn-lg rounded-pill px-4 py-2" style="min-width: 180px;">Xóa</button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill px-4 py-2" style="min-width: 180px;">Hủy</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>